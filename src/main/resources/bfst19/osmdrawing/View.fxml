<Scene xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="bfst19.osmdrawing.Controller"
       fx:id="scene"
       onKeyPressed="#onKeyPressed"
>
    <root>
        <BorderPane fx:id="gridPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" >
            <center>
                <StackPane>
                    <BorderPane fx:id="borderpane1" StackPane.alignment="CENTER" >
                        <top>
                            <ToolBar fx:id="toolbar" StackPane.alignment="TOP_LEFT">
                                <items>
                                    <Region styleClass="spacer" />
                                    <HBox styleClass="segmented-button-bar" alignment="TOP_CENTER" >
                                        <Button fx:id="routes" text="Routes" styleClass="first" />
                                        <Button fx:id="water"  text="Water" />
                                        <Button fx:id="buildings"  text="Buildings" />
                                        <Button fx:id="noColors"  text="No colors " />
                                        <Button fx:id="colors"  text="Colors" styleClass="last" />

                                    </HBox>
                                </items>
                            </ToolBar>
                        </top>

                        <center>
                            <MapCanvas fx:id="mapCanvas" width="${borderpane1.width}" height="${borderpane1.height}"
                                       onScroll="#onScroll"
                                       onMousePressed="#onMousePressed"
                                       onMouseDragged="#onMouseDragged"
                            />
                            <HBox StackPane.alignment="TOP_CENTER" alignment="TOP_LEFT">
                                <ListView fx:id="listView" />

                                <TextField  fx:id="textField"  />
                            </HBox>

                        </center>

                        <Pane fx:id="scalebar" BorderPane.alignment="BOTTOM_RIGHT" maxHeight="-Infinity" maxWidth="20" minHeight="-Infinity" minWidth="20" prefHeight="20.0" prefWidth="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" >

                            <children>
                                <Text fx:id="scaleText" layoutX="140.0" layoutY="15.0" text="100km"/>
                                <SVGPath fx:id="scalebarLeft"  content="M10,-10 L10,0" layoutX="180.0" layoutY="320.0" stroke="#800400"
                                         strokeWidth="3.0" />
                                <!--   It is this value   -->
                                <SVGPath fx:id="scalebarMiddle"   content="M10,0 L200,0" layoutX="180.0" layoutY="320.0" stroke="#008002"
                                         strokeWidth="3.0" />
                                <!-- and  this     +this one witch has to be changed in order to make the scalebar longer -->
                                <SVGPath fx:id="scalebarRight" content="M200,-10 L200,0" layoutX="180.0" layoutY="320.0" stroke="#001280"
                                         strokeWidth="3.0" />
                            </children>
                        </Pane>
                    </BorderPane>



                </StackPane>


            </center>

        </BorderPane>

    </root>
</Scene>