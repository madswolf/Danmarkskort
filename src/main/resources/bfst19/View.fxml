<?xml version="1.0" encoding="UTF-8"?>


<?import bfst19.MapCanvas?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<Scene xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="bfst19.Controller"
       fx:id="scene"
       onKeyPressed="#onKeyPressed"
>
    <root>
            <StackPane fx:id="stackPane">
                <MapCanvas fx:id="mapCanvas" width="${scene.width}" height="${scene.height}"
                           onScroll="#onScroll"
                           onMousePressed="#onMousePressed"
                           onMouseDragged="#onMouseDragged"
                />

                <BorderPane fx:id="borderPane" pickOnBounds="false" VBox.vgrow="ALWAYS">


                    <bottom>
                        <!--Start  Scalebar -->
                        <Pane fx:id="scalebar" BorderPane.alignment="BOTTOM_RIGHT" style="-fx-background-color: white;" prefWidth="${scene.width}" maxHeight="20" prefHeight="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" layoutX="180.0" layoutY="350.0" >

                            <children>
                                <Text fx:id="scaleText" layoutY="15.0" layoutX="600.0"  text=""/>
                                <SVGPath fx:id="scalebarLeft"  content="M40,-10 L40,0" layoutY="15.0" layoutX="600.0"  stroke="#800400"
                                         strokeWidth="3.0" />
                                <!--   It is this value   -->
                                <SVGPath fx:id="scalebarMiddle"   content="M40,0 L100,0" layoutY="15.0" layoutX="600.0"  stroke="#008002"
                                         strokeWidth="3.0" />
                                <!-- and  this     +this one witch has to be changed in order to make the scalebar longer -->
                                <SVGPath fx:id="scalebarRight" content="M100,-10 L100,0" layoutY="15.0" layoutX="600.0"  stroke="#001280"
                                         strokeWidth="3.0" />
                            </children>
                        </Pane>
                        <!--End Scalebar  -->
                    </bottom>

                </BorderPane>
            </StackPane>
    </root>
</Scene>